<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bookinist</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="background-color:rgb(14,22,33)">
    <header class="p-3 bg-dark text-white">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li >
                        <img src="~/image/books-stack-of-three.png" style="width:40px;height:40px;" />
                    </li>
                    <li><a class="nav-link px-2 text-uppercase" style="color: rgb(94,187,241); font-weight: 600;" asp-action="Home" asp-controller="Book">Bookinist</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a class="nav-link px-2 text-white" asp-area="" asp-controller="Book" asp-action="Create">Создать новую книгу</a></li>
                        
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Аккаунт
                            </a>
                            <div class="dropdown-menu bg-dark" style="border: 1px solid rgb(94,187,241);" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item text-white" asp-action="GetMyBooks" asp-controller="Book">Мои книги</a>
                                <a class="dropdown-item text-white" asp-area="" asp-controller="Account" asp-action="UserInfo">Мой аккаунт</a>
                            </div>
                        </li>
                    }

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><h4 style="margin-top: .5rem !important; margin-right: 10px; margin-left:380px">Привет <span style="color: rgb(94,187,241);">@User.Identity.Name</span>!</h4></li>
                    }

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item" style="margin-top: .4rem !important;">
                            <a class="btn btn-warning" asp-action="Logout" asp-controller="Account">Выйти</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item" style="margin-left:870px">
                            <a class="btn btn-warning" asp-action="Login" asp-controller="Account">Войти</a>
                        </li>
                    }

                </ul>



            </div>
        </div>
    </header>
    <div class="container" style="background-color:rgb(14,22,33)">
        @if (User.IsInRole("Admin"))
        {
            <div class="d-flex justify-content-between">
                <div class="d-flex flex-column flex-shrink-0 p-3 mt-4 mr-3 text-white bg-dark" style="width: 280px; height: 400px; border-radius: 8px; border: 1px solid rgb(94,187,241); ">
                    
                    <hr />
                    <div class="grand">
                        <ul class="nav nav-pills flex-column mb-auto">
                            <li class="nav-item">
                                <a href="/" class="nav-link text-white button-hovered" aria-current="page" style="margin-top:1px; border-radius:10px;">
                                    <i class="fas fa-home" width="16" height="16" style="color: rgb(94,187,241); margin-right: .5rem !important; "></i>
                                    Домой
                                </a>
                            </li>
                            <li>
                                <a class="nav-link text-white button-hovered" asp-area="" asp-controller="Account" asp-action="Index" style=" margin-top: 5px; border-radius: 10px;">
                                    <i class="fas fa-user" width="16" height="16" style="color: rgb(94,187,241); margin-right: .5rem !important; "></i>
                                    Список Аккаунтов
                                </a>
                            </li>
                            <li>
                                <a class="nav-link text-white button-hovered" asp-area="" asp-controller="Book" asp-action="Index" style=" margin-top: 5px; border-radius: 10px;">
                                    <i class="fas fa-book" width="16" height="16" style="color: rgb(94,187,241); margin-right: .5rem !important; "></i>
                                    Список книг
                                </a>
                            </li>
                           

                        </ul>
                    </div>

                </div>

                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        }
        else
        {
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        }


        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2021 - Bookinist
            </div>
        </footer>
        <style>
            .button-hovered{
                border: 1px solid transparent;
                background: rgba(0,0,0,0.3);
            }
            .button-hovered:hover {
                border: 1px solid rgb(94,187,241);

            }
            .dropdown-item:hover{
                background-color:rgb(53,58,64);
            }          
        </style>
        <script src="https://kit.fontawesome.com/5fd75352c8.js" crossorigin="anonymous"></script>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
