@model List<Bookinist.Models.DTO.BookDTO>
<br />
<h5 class="pt-3" style="color:white">My Books</h5>
<br />
<table class="table table-dark">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Название</th>
            <th>Автор</th>
            <th>Цена</th>
            <th>Краткое описане</th>
            <th>Категория</th>
            <th>Владелец</th>
            <th>Статус</th>
            <th></th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
        <tr>
            <td>@book.Id</td>
            <td>@book.Name</td>
            <td>@book.Author</td>
            <td>@book.Price</td>
            <td>@book.ShortDesc</td>
            <td>@book.CategoryName</td>
            <td>@book.UserName</td>
            @if (book.Status == true)
            {
                <td class="text-success">Опубликован</td>
            }
            else
            {
                <td class="text-warning">На рассмотрениии</td>
            }
            <td><a class="btn btn-info" href="~/Book/Edit?id=@book.Id">Изменить</a></td>

        </tr>
        }
    </tbody>
</table>